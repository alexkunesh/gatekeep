<Window x:Class="Gatekeep.PasswordInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gatekeep"
        mc:Ignorable="d"
        Title="Gatekeep" Height="445" Width="370" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" RenderOptions.BitmapScalingMode="NearestNeighbor"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">
    <Grid>
        <Button Content="Cancel" HorizontalAlignment="Center" Margin="0,362,0,0" VerticalAlignment="Top" Height="42" Width="350"/>
        <Image HorizontalAlignment="Center" Height="100" Margin="0,50,0,0" VerticalAlignment="Top" Width="100" Source="/GK_Question.png"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Margin="0,170,0,0" TextAlignment="Center">
            <Run Text="Input an override password."/><LineBreak/>
            <Run Text="Override passwords are one-time use only."/><LineBreak/>
        </TextBlock>
        <TextBlock x:Name="InputTextBlock" HorizontalAlignment="Center" Margin="0,267,0,0" TextWrapping="Wrap" Text="_ _ _ _ - _ _ _ _" VerticalAlignment="Top" FontSize="32" FontFamily="Lucida Console"/>

    </Grid>
</Window>
